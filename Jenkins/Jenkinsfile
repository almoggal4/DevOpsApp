pipeline {
    agent any
    stages {
        stage('Create External Infrastructure') {
            steps {
                echo 'Create/Comply the exteranl infrastructre in AWS Terraform'
                sh 'ssh-keygen -f "/root/.ssh/known_hosts" -R "terraform-aws"'
                sh 'mkdir /root/terraform_script_log'
                sh 'ssh -o StrictHostKeyChecking=no -i /root/.ssh/id_rsa jenkins-remote-user@terraform-aws "cd /Terraform/TerraformAWSInfrastructure/TerraformApp && ./terraform_deploy.sh" > /root/terraform_script_log'
            }
        }
        stage('Create Internal Kubernetes Infrastructure') {
            steps {
                echo 'Create/Comply the Kubernetes internal infrastructre in AWS EC2 using Ansible'
                sh 'ssh-keygen -f "/root/.ssh/known_hosts" -R "ansible"'
                sh 'ssh -o StrictHostKeyChecking=no -i /root/.ssh/id_rsa jenkins-remote-user@ansible "cd /home/root/AnsibleSharedFiles/SSHKuberntesInstallation && "'

            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                echo 'service docker start'
            }
        }
        stage('Push') {
            steps {
                echo 'Push image to docker registery...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}